<body class="abc">
<div class="form">
<h2 style="margin-left:40%; font-family:URW Chancery L;font-size:40px;color:#AA1029;">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field" style="margin-left:5%; font-family:URW Chancery L;font-size:20px;">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
<br><br>
  <div class="actions" style="margin-left:5%; font-family:URW Chancery L;font-size:20px;">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<div style="margin-left:40%; font-family:URW Chancery L;font-size:20px;">
<%= render "devise/shared/links" %>
</div>
</div></body>
